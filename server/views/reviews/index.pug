extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5 #{page}
        .row
            .col-md-12
                blockquote.text-center Read about our customers reviews
                include ../layout/partials/reviews             
                    


            .col-md-12
                h2.text-center Add your review
                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center=error.msg    
                .row.justify-content-center
                    .col-md-8
                        form(action="/reviews", method="POST")
                            .form-group     
                                label(for="name") Name
                                input(id="name" , class="form-control" , type="text", placeholder="Your name", name="name" value=name)
                            .form-group  
                                label(for="email") Email
                                input(id="email" , class="form-control" , type="email", placeholder="Your email", name="email" value=email)
                            .form-group  
                                label(for="message") Message
                                textarea#message(class="form-control" , rows="3", placeholder="Write your message", name="message")=message
                            input.btn.btn-success.btn-block(type="submit", value="Add message")